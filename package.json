{
  "name": "dragone",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "npm": "Please use pnpm instead of NPM to install dependencies",
    "yarn": "Please use pnpm instead of Yarn to install dependencies",
    "pnpm": "10.23.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "format": "prettier -w \"**/*.{ts,js,css,scss,html}\"",
    "commit": "cz",
    "storybook": "ng run @dragone/ui:storybook",
    "build-storybook": "ng run @dragone/ui:build-storybook",
    "postinstall": "pnpx playwright install"
  },
  "dependencies": {
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@floating-ui/dom": "^1.7.4",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/font-awesome": "^33.0.0",
    "ng-primitives": "0.90.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@analogjs/storybook-angular": "^2.1.0",
    "@analogjs/vite-plugin-angular": "^2.1.0",
    "@analogjs/vitest-angular": "^2.1.0",
    "@angular-devkit/build-angular": "21.0.0",
    "@angular-eslint/builder": "20.6.0",
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@compodoc/compodoc": "1.1.32",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "10.0.8",
    "@storybook/addon-docs": "10.0.8",
    "@storybook/addon-onboarding": "10.0.8",
    "@storybook/angular": "10.0.8",
    "@vitest/browser": "^4.0.13",
    "@vitest/browser-playwright": "^4.0.13",
    "@vitest/coverage-v8": "4.0.13",
    "angular-eslint": "20.6.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "10.0.8",
    "lefthook": "^2.0.4",
    "ng-packagr": "^21.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "storybook": "10.0.8",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.47.0",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.13",
    "zone.js": "^0.15.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "experimentalTernaries": true,
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}
