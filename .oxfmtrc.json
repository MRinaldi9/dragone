{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "singleQuote": true,
  "arrowParens": "avoid",
  "experimentalSortPackageJson": true,
  "ignorePatterns": [
    "node_modules",
    "pnpm-lock.yaml",
    "dist",
    "coverage",
    ".angular",
    ".env",
    ".env.*",
    ".vscode",
    ".idea",
    "*.swp",
    "*.swo",
    "*~",
    ".DS_Store",
    "Thumbs.db",
    "documentation.json",
    "*.tsbuildinfo",
    "*.tgz",
    "*.log",
    "npm-debug.log*",
    "pnpm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    "test-results",
    "playwright-report",
    "storybook-static",
    "package-lock.json",
    "yarn.lock",
    "CHANGELOG.md",
    ".github",
    ".oxfmtrc.json",
    ".oxlintrc.json",
    ".storybook/tsconfig.json",
    "README.md",
    "*.yml",
    "*.config.mjs",
    "angular.json",
    "projects/**/*.json",
    "tsconfig.node.json"
  ],
}
